<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Which of these keywords do you \n identify with the most?"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:itemSpacing="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:singleLine="true"
        android:layout_marginStart="16dp"
        app:layout_constraintVertical_bias=".05"
        app:layout_constraintBottom_toTopOf="@id/b_submit"
        app:singleSelection="false">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casual"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comfortable"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipGroup1"
        android:layout_marginStart="16dp"

        >

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professional"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refined"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sophisticated"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipGroup2"
        android:layout_marginStart="16dp"

        >

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eclectic"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unconventional"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"

            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unique"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"/>
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipGroup3"
        >

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bold"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Striking"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attention Grabbing"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipGroup4"
        >

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gentle"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"

            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soft"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensitive"
            app:chipCornerRadius="16dp"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:checkedIcon="@drawable/ic_check_black_24dp"
            app:textStartPadding="16dp"
            app:textEndPadding="16dp"
            />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/b_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/proceed"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup5"
        app:layout_constraintVertical_bias="0.94"
        />


</androidx.constraintlayout.widget.ConstraintLayout>